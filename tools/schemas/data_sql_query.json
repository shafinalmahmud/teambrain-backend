{
  "name": "data_sql_query",
  "description": "Run a SQL query on the database",
  "input_schema": {
    "type": "object",
    "required": ["query"],
    "properties": {
      "query": { "type": "string" }
    }
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "rows": {
        "type": "array",
        "items": { "type": "object" }
      }
    }
  },
  "error_schema": {
    "type": "object",
    "properties": {
      "error": { "type": "string" },
      "reason": { "type": "string" }
    }
  },
  "metadata": {
    "version": "1.0.0",
    "permissions": ["Analyst", "Executor"],
    "rate_limit": { "max_calls": 10, "per_seconds": 60 },
    "safety": { "disallowed_topics": [], "sensitive_fields": [] }
  }
}